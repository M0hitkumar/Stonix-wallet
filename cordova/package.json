{
    "name": "com.stonix.wallet",
    "displayName": "StonixWallet",
    "private": true,
    "description": "A minimalistic wallet GUI for c-lightning",
    "author": "Mohit Kumar",
    "license": "MIT",
    "scripts": {
        "dist": "./build.sh"
    },
    "dependencies": {
        "cordova": "^8.1.2",
        "cordova-android": "^7.1.4",
        "cordova-plugin-badge": "^0.8.8",
        "cordova-plugin-customurlscheme": "^5.0.2",
        "cordova-plugin-device": "^2.0.3",
        "cordova-plugin-local-notification": "https://github.com/katzer/cordova-plugin-local-notifications.git#caff55ec758fdf298029ae98aff7f6a8a097feac",
        "cordova-plugin-qrscanner": "^3.0.1",
        "cordova-plugin-screen-orientation": "^3.0.2",
        "cordova-plugin-whitelist": "^1.3.5",
        "es6-promise-plugin": "^4.2.2"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {},
            "cordova-plugin-customurlscheme": {
                "URL_SCHEME": "lightning",
                "ANDROID_SCHEME": " ",
                "ANDROID_HOST": " ",
                "ANDROID_PATHPREFIX": "/"
            },
            "cordova-plugin-qrscanner": {},
            "cordova-plugin-screen-orientation": {},
            "cordova-plugin-local-notification": {}
        },
        "platforms": [
            "android"
        ]
    }
}
